a.tag-plugin.button
  background: var(--theme)
  color: var(--alpha100)
  display: inline-flex
  align-items: baseline
  justify-content: center
  padding: 0 4px
  trans1 background
  margin: .5em 0
  font-size: 1em
  line-height: 1.5
  svg,img
    height: 1.2em
    width: auto
    margin: 0 -0.25em 0 .5em
    flex-shrink: 0
    align-self: center
  span 
    text-indent: 0
    margin: .5em
  

a.tag-plugin.button[size='xs']
  margin: 0
  border-radius: 4px
  svg,img
    margin: 0 2px
  span
    margin: 2px

a.tag-plugin.button:hover
  --theme: $color-hover

.tag-plugin.grid a.tag-plugin.button
  width: 100%
  box-sizing: border-box
