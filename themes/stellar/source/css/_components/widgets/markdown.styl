.widget-wrapper.markdown
  .widget-body
    border-radius: $border-card-s
    padding: .25rem 1rem
    background: var(--alpha50)
    >*:first-child
      margin-top: .75rem
    a:not([class])
      trans1 all
      border-bottom: 1px solid var(--text)
      color: var(--text)
      &:hover
        color: $color-hover
        border-bottom: 1px solid $color-hover

.widget-wrapper.markdown .linklist
  margin: 1em 0
  .link
    background: var(--alpha50)
  .link:hover
    background: var(--alpha100)